/**app.wxss**/
@import 'libs/css/weui.wxss';

.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  justify-content: space-between;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
  font-size: 40rpx;
}

.page-body {
  width: 100%;
  flex-grow: 1;
  overflow-x: hidden;
}

.body_bg{
  position: fixed;
  height: 100%;
  width: 100%;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  background: #e0e0e0;
  z-index: -2;
}