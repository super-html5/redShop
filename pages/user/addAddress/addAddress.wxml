          <textarea class="weui-textarea" placeholder="" style="height: 3.3em" />
        </view>
      </view>
    </view>

    <view class="weui-btn-area">
      <button class="weui-btn orange_color"  bindtap="showTopTips">保存</button>
    </view>

  </view>
