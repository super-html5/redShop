<!--pages/user/order/order.wxml-->
<view class="body_bg"></view>
<view class="page">
  <view class="page__bd">
    <view class="weui-panel weui-panel_access">
      <!-- <view class="weui-panel__hd">图文组合列表</view> -->


      <view class="weui-panel__bd" wx:for="{{ordersLists}}" wx:for-item="ordersLists">
        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg ">
          <view class="weui-media-box__title text_ringht margin_right">等待买家付款</view>

          <block wx:for="{{ordersLists.orderGoods}}" wx:for-item="orderGoods">
            <navigator url="/pages/index/details/details?id={{orderGoods.goodsId}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
              <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                <image class="weui-media-box__thumb" src="{{orderGoods.goodsImgUrl}}" />
              </view>
              <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                <view class="weui-media-box__title small_title">
                  <text>{{orderGoods.goodsTitle}}</text>
                  <text class="float_right">￥{{orderGoods.goodsNum}}</text>
                </view>
                <view class="weui-media-box__title small_title">
                  <text>200ml/瓶</text>
                  <text class="float_right">*{{orderGoods.goodsNum}}</text>
                </view>
              </view>
            </navigator>
          </block>

          <view class="weui-media-box__title float_right margin_right">共
            <text>{{ordersLists.number}}</text>件商品
            <text>合计：<text>￥{{ordersLists.price}}</text></text>
          </view>
        </view>
        <view class="button_view clear">
          <button size="mini">取消订单</button>
          <button size="mini">付款</button>
        </view>
      </view>


    </view>
  </view>
</view>