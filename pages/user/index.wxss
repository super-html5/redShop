/* pages/user/index.wxss */

.userinfoImg {
  background: #ff6319;
  color: #fff;
  height: 240rpx;
}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 40rpx 80rpx 40rpx 40rpx;
  border-radius: 50%;
  display: block;
  float: left;
  border: 1px solid #dedede;
}

.userinfoImg .userinfo-nickname {
  float: left;
  margin-top: 10rpx;
  line-height: 240rpx;
}

.userinfoImg .userinfo-nickname:nth-of-type(1) {
  font-weight: bold;
}

.usermotto {
  margin-top: 200px;
}

.userinfo {
  width: 100%;
  text-align: left;
  background: #fff;
}

.userinfo image {
  width: 44rpx;
  height: 44rpx;
  vertical-align: middle;
  margin-bottom: 10rpx;
  margin-right: 20rpx;
}

.userinfo>view {
  padding: 30rpx 40rpx 20rpx 30rpx;
  border-top: 1px solid #dedede;
  font-size: 16px;
  position: relative;
}

.userinfo>view:last-child {
  border-bottom: 1px solid #dedede;
}

.authentication {
  float: right;
  margin-right: 10rpx;
  color: #aaa;
}

.triangle-facing-right {
  display: inline-block;
  float: right;
  border-right: 1.5px solid;
  border-bottom: 1.5px solid;
  width: 20rpx;
  height: 20rpx;
  color: #bbb;
  transform: rotate(-45deg);
  margin-top: 0.36rem;
}
.button_share{
  width: 100%;
  height: 100%;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  position: absolute;
  background: #ffffff;
  border:none;
  text-align: left;
  font-size: 16px;
  line-height: 1;
  padding: 30rpx 40rpx 20rpx 30rpx;
}
.button_share::after{
  border:none;
}